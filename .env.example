# PostgreSQL Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=hann
# Optional: CA Certificate for SSL/TLS database connections (multi-line string)
# DATABASE_CA_CERTIFICATE=-----BEGIN CERTIFICATE-----\nMIID...\n-----END CERTIFICATE-----

# MySQL Database Configuration (for data migration)
MYSQL_HOST=localhost
MYSQL_PORT=3307
MYSQL_USER=ghanndb
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=hanndb
# Optional: Skip deleted records during migration
# SKIP_DELETED=true

# Cloudflare Turnstile
# NUXT_TURNSTILE_ENABLED is enabled by default. Set to "false" to disable (e.g., for local development)
# NUXT_TURNSTILE_ENABLED=false
NUXT_TURNSTILE_SITE_KEY=your_turnstile_site_key_here
NUXT_TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here

# Google Maps API
NUXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Postmark Email Configuration
POSTMARK_SERVER_API_TOKEN=your_postmark_server_api_token_here
EMAIL_FROM=info@hannpsychologicalservices.com
EMAIL_TO=info@hannpsychologicalservices.com
